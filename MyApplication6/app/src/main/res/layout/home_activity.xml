<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_20">
        <!--        Header-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_75"
            android:paddingHorizontal="@dimen/margin_20">
            <Button
                android:id="@+id/setting"
                android:layout_width="@dimen/standard"
                android:layout_height="@dimen/standard"
                android:background="@drawable/ic_baseline_exit_to_app_24"
                android:gravity="center"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/font_paragraph"
                android:fontFamily="@font/poppins_medium"
                android:textAllCaps="true"
                android:text="@string/app_name"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/notification"
                android:layout_width="@dimen/standard"
                android:layout_height="@dimen/standard"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_round_notifications_none_24" />
        </RelativeLayout>
        <!--        Main Menu-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="@string/hello"
                    android:textColor="@color/font_dark"
                    android:textSize="@dimen/font_paragraph" />

                <TextView
                    android:id="@+id/nameuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/user"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_title" />
                <RelativeLayout
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40"
                    android:background="@drawable/edit_text_border_primary">


                    <TextView
                        android:id="@+id/myprofile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textSize="@dimen/font_paragraph"
                        android:text="@string/myprofile"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/primary_transparent"/>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_20">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/category"
                            android:textColor="@color/font_dark" />

                        <TextView
                            android:id="@+id/lessonpartner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:text="@string/see_all"
                            android:clickable="true"
                            android:fontFamily="@font/poppins_light"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/font_small" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_75"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/margin_3"
                        android:gravity="center"
                        >
                        <ImageView
                            android:id="@+id/chemistry"
                            android:clickable="true"
                            android:layout_width="@dimen/margin_75"
                            android:layout_height="@dimen/margin_75"
                            android:src="@drawable/chemistry_banner_small"
                            android:layout_marginHorizontal="@dimen/margin_5"/>
                        <ImageView
                            android:id="@+id/math"
                            android:clickable="true"
                            android:layout_width="@dimen/margin_75"
                            android:layout_height="@dimen/margin_75"
                            android:src="@drawable/math_banner_small"
                            android:layout_marginHorizontal="@dimen/margin_5"/>
                        <ImageView
                            android:id="@+id/music"
                            android:clickable="true"
                            android:layout_width="@dimen/margin_75"
                            android:layout_height="@dimen/margin_75"
                            android:src="@drawable/music_banner_small"
                            android:layout_marginHorizontal="@dimen/margin_5"/>
                        <ImageView
                            android:id="@+id/biology"
                            android:clickable="true"
                            android:layout_width="@dimen/margin_75"
                            android:layout_height="@dimen/margin_75"
                            android:src="@drawable/biology_banner_small"
                            android:layout_marginHorizontal="@dimen/margin_5"/>
                    </LinearLayout>

                </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_200"
                    android:layout_marginTop="@dimen/margin_20"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_20">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/teacher"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/font_dark"
                            android:layout_alignParentStart="true"/>

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <LinearLayout
                            android:clickable="true"
                            android:layout_width="@dimen/margin_150"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="@dimen/margin_3">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_100"
                                >
                                <ImageView
                                    android:id="@+id/myadvertisement"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/guru"/>
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_marginTop="@dimen/margin_5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingHorizontal="@dimen/margin_10">
                                <TextView
                                    android:id="@+id/myiklan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                   android:text="My Advertisement"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="@dimen/font_text"
                                    android:textAlignment="center"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/font_dark"/>

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:clickable="true"
                            android:layout_width="@dimen/margin_150"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="@dimen/margin_3">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_100"
                                >
                                <ImageView
                                    android:id="@+id/profile_teacher1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/orderlist"/>
                            </RelativeLayout>
                            <LinearLayout
                                android:layout_marginTop="@dimen/margin_5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingHorizontal="@dimen/margin_10">
                                <TextView
                                    android:id="@+id/ordermy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="My Order List"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="@dimen/font_text"
                                    android:textAlignment="center"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/font_dark"/>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_150"
                    android:layout_marginTop="@dimen/margin_20">

                    <ImageView
                        android:clickable="true"
                        android:id="@+id/be_teacher"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/be_teacher_banner" />
                </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>